<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.suan.flowlayout.FlowLayout
        flow:flow_orientation="horizontal"
        android:layout_width="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="#000000"
        android:layout_height="500dp">

        <TextView
            android:text="1"
            style="@style/textStyle"
            android:background="#987892"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <TextView
            android:text="2"
            style="@style/textStyle"
            android:background="#999992"
            android:layout_width="90dp"
            android:layout_height="170dp"/>

        <TextView
            android:text="3"
            style="@style/textStyle"
            android:background="#a500a5"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <TextView
            android:text="4"
            style="@style/textStyle"
            android:background="#a5a5"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

    </com.suan.flowlayout.FlowLayout>
</LinearLayout>
